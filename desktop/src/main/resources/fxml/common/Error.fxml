<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml"
         stylesheets="@../../css/common.css"
         styleClass="grid-background" style="-fx-padding: 10 10 10 10;" spacing="10" minWidth="210">

    <VBox spacing="3">
        <Text>There is an error:</Text>
        <Text fx:id="errorMessage" wrappingWidth="200"/>
    </VBox>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <MFXButton buttonType="RAISED" text="Copy to clipboard" onAction="#copyErrorMessageToClipboard"/>
        <MFXButton buttonType="RAISED" text="Close" onAction="#close"/>
    </HBox>

</fx:root>