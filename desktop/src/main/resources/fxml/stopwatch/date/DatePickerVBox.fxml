<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXDatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml"
         stylesheets="@../../../css/common.css"
         styleClass="grid-background" style="-fx-padding: 10 10 10 10;" spacing="10"
         maxWidth="275">

    <Label maxWidth="1.7976931348623157E308" alignment="CENTER" styleClass="header-label">Choose day</Label>

    <MFXDatePicker promptText="Pick a date..." fx:id="datePicker" onAction="#pickNewDate"/>

    <MFXButton alignment="CENTER" buttonType="RAISED" onAction="#addRecord" text="Add record"/>

</fx:root>