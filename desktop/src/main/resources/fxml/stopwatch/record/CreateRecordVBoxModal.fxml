<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXListView?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml"
         stylesheets="@../../../css/common.css"
         styleClass="grid-background" style="-fx-padding: 10 10 10 10;" spacing="10" minWidth="300" maxWidth="300">

    <MFXTextField fx:id="recordNameTextField" maxWidth="1.7976931348623157E308" alignment="CENTER" floatMode="BORDER"
                  floatingText="Name"/>

    <MFXListView fx:id="defaultRecordNamesList" prefWidth="Infinity">
        <GridPane.margin>
            <Insets bottom="15.0"/>
        </GridPane.margin>
    </MFXListView>

    <HBox spacing="5" alignment="CENTER_RIGHT">
        <MFXButton buttonType="RAISED" text="Create" onAction="#create" maxWidth="1.7976931348623157E308"
                   alignment="CENTER"/>
        <MFXButton buttonType="RAISED" fx:id="cancelButton" text="Cancel" onAction="#cancel"/>
    </HBox>

</fx:root>