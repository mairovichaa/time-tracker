<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXToggleButton?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml"
         stylesheets="@../../css/common.css"
         styleClass="grid-background" style="-fx-padding: 10 10 10 10;"
         spacing="5" maxWidth="275">
    <Label maxWidth="1.7976931348623157E308" alignment="CENTER" styleClass="header-label">Day statistic</Label>

    <HBox spacing="3">
        <Label>Amount of records:</Label>
        <Label fx:id="amountOfRecordsLabel"/>
    </HBox>

    <HBox spacing="3">
        <Label>Total amount of time:</Label>
        <Label fx:id="totalAmountOfTimeLabel"/>
    </HBox>

    <HBox spacing="3">
        <Label>Expected amount of time:</Label>
        <Label fx:id="expectedAmountOfTime"/>
    </HBox>

    <HBox spacing="3">
        <Label>Time to work left:</Label>
        <Label fx:id="timeToWorkLeft"/>
    </HBox>

    <HBox spacing="3">
        <Label>Overtime:</Label>
        <Label fx:id="overtime"/>
    </HBox>

    <Separator/>

    <HBox spacing="3">
        <Label>Tracked time:</Label>
        <Label fx:id="trackedTimeLabel"/>
    </HBox>

    <MFXToggleButton text="Tracked" fx:id="trackedToggle"/>
    <Separator/>

    <HBox spacing="3">
        <Label>Comment:</Label>
        <Label fx:id="comment"/>
    </HBox>

    <HBox spacing="3">
        <MFXButton buttonType="RAISED" fx:id="editButton" text="Edit"/>
    </HBox>
</fx:root>