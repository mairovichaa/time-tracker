<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml"
         stylesheets="@../../css/common.css"
         styleClass="grid-background" style="-fx-padding: 10 10 10 10;" spacing="10" minWidth="220" maxWidth="220">

    <Label maxWidth="1.7976931348623157E308" alignment="CENTER" styleClass="header-label">Total statistics</Label>

    <HBox spacing="5">
        <padding>
            <Insets top="2" left="10"/>
        </padding>
        <Label fx:id="startedAtLabel">
            <tooltip>
                <Tooltip text="First at"/>
            </tooltip>
        </Label>
        <Label fx:id="fromStartedAtToFinishedAtIconLabel">
            <padding>
                <Insets top="-2"/>
            </padding>
        </Label>
        <Label fx:id="finishedAtLabel">
            <tooltip>
                <Tooltip text="Last at"/>
            </tooltip>
        </Label>
    </HBox>

    <HBox spacing="10">
        <HBox spacing="2" minWidth="90">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
            <Label fx:id="expectedIconLabel">
                <tooltip>
                    <Tooltip text="Expected time to work"/>
                </tooltip>
            </Label>
            <Label fx:id="expectedAmountOfTimeLabel">
                <tooltip>
                    <Tooltip text="Expected time to work"/>
                </tooltip>
            </Label>
        </HBox>
        <HBox spacing="2">
            <Label fx:id="totalAmountOfTimeIconLabel">
                <tooltip>
                    <Tooltip text="Measured time"/>
                </tooltip>
            </Label>
            <Label fx:id="totalAmountOfTimeLabel">
                <tooltip>
                    <Tooltip text="Measured time"/>
                </tooltip>
            </Label>
        </HBox>
    </HBox>

    <HBox spacing="10">
        <HBox spacing="2" minWidth="90">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
            <Label fx:id="timeToWorkLeftIconLabel">
                <tooltip>
                    <Tooltip text="Time to work left"/>
                </tooltip>
            </Label>
            <Label fx:id="timeToWorkLeftLabel">
                <tooltip>
                    <Tooltip text="Time to work left"/>
                </tooltip>
            </Label>
        </HBox>
        <HBox spacing="2">
            <Label fx:id="overtimeIconLabel">
                <tooltip>
                    <Tooltip text="Overtime"/>
                </tooltip>
            </Label>
            <Label fx:id="overtimeLabel">
                <tooltip>
                    <Tooltip text="Overtime"/>
                </tooltip>
            </Label>
        </HBox>
    </HBox>

</fx:root>