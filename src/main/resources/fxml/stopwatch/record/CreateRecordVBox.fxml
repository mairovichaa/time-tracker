<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml"
         stylesheets="@../../../css/common.css"
         styleClass="grid-background" style="-fx-padding: 10 10 10 10;" spacing="10">

    <Label maxWidth="1.7976931348623157E308" alignment="CENTER" styleClass="header-label">Create record</Label>
    <MFXTextField fx:id="recordDateTextField" maxWidth="1.7976931348623157E308" alignment="CENTER" floatMode="BORDER" floatingText="Date" disable="true"/>
    <MFXTextField fx:id="recordNameTextField" maxWidth="1.7976931348623157E308" alignment="CENTER" floatMode="BORDER" floatingText="Name"/>
    <MFXButton buttonType="RAISED" text="Create" onAction="#create" maxWidth="1.7976931348623157E308" alignment="CENTER"/>

</fx:root>